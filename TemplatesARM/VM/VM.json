{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
              "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
          "type": "securestring",
          "metadata": {
            "description": "Password for the Virtual Machine."
          }
        },
        "VMName": {
          "type": "string",
          "metadata": {
              "description": "Name of VM"
          }
        },
        "windowsOSVersion": {
          "type": "string",
          "allowedValues": [
            "2008-R2-SP1",
            "2012-Datacenter",
            "2012-R2-Datacenter",
            "2016-Nano-Server",
            "2016-Datacenter-with-Containers",
            "2016-Datacenter"
          ],
          "metadata": {
            "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
          }
        },
        "location": {
          "type": "string",
          "defaultValue": "[resourceGroup().location]",
          "metadata": {
            "description": "Location for all resources."
          }
        },
        "vmSize": {
          "type": "string",
          "metadata": {
            "description": "Sizes of the VM, with count of cores <=2, and RAM between 1792 and 4096 KB"
          }
        },
        "count": {
            "type": "int",
            "metadata": {
                "description": "Count copies of Nics and VMs (every VM had only 1 NIC)"
            }
        },
        "virtualNetworkName": {
          "type": "string",
          "metadata": {
              "description": "Name for new virtual network"
          }
        },
        "nicName": {
          "type": "string",
          "metadata": {
              "description": "Name of Load Balancer backend AddressPools"
          }
        },
        "LoadBalancerName": {
          "type": "string",
          "metadata": {
              "description": "Name of Load Balancer"
          }
        },
        "backendAddressPoolsName": {
          "type": "string",
          "metadata": {
              "description": "Name of Load Balancer backend AddressPools"
          }
        },
        "inboundNatRulesName": {
          "type": "string",
          "metadata": {
              "description": "Name of Load Balancer Nat rules (RDP)"
          }
        },
        "subnetName": {
          "type": "string",
          "metadata": {
            "description": "Name for new virtual sunnet"
          }
        },
        "StorageAccName": {
          "type": "string",
          "metadata": {
            "description": "The name for storage account."
          }
        },
        "availabilitySetName": {
          "type": "string",
          "metadata": {
            "description": "The name for availability set."
          }
        }
    },
    "variables": {
        "availabilitySetName": "[concat(resourceGroup().name,parameters('availabilitySetName'))]",
        "availabilitySetID": "[resourceId('Microsoft.Compute/availabilitySets',variables('availabilitySetName'))]",
        "subnetName": "[concat(resourceGroup().Name,'-',parameters('subnetName'))]",
        "nicName": "[concat(resourceGroup().Name, '-', parameters('nicName'))]",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
        "vmName": "[concat(resourceGroup().Name,'-',parameters('VMName'))]",
        "location": "[parameters('location')]",
        "virtualNetworkName": "[concat(resourceGroup().name,'-',parameters('virtualNetworkName'))]",
        "LoadBalancerName": "[concat(resourceGroup().Name,'-',parameters('LoadBalancerName'))]",
        "lbID": "[resourceId('Microsoft.Network/loadBalancers',variables('LoadBalancerName'))]",
        "lbPoolID": "[concat(variables('lbID'),'/backendAddressPools/',parameters('backendAddressPoolsName'))]",
        "loadBalancerInboundNatRules": "[concat(variables('lbID'),'/inboundNatRules/',parameters('inboundNatRulesName'))]",
        "vmSize": "[parameters('vmSize')]",
        "adminUsername": "[parameters('adminUsername')]",
        "adminPassword": "[parameters('adminPassword')]",
        "windowsOSVersion": "[parameters('windowsOSVersion')]",
        "networkInterfacesID": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]",
        "count": "[parameters('count')]",
        "storageAccName": "[concat(resourceGroup().name,parameters('storageAccName'))]"
    },
    "resources": [
      {
        "type": "Microsoft.Compute/availabilitySets",
        "name": "[variables('availabilitySetName')]",
        "apiVersion": "2017-03-30",
        "location": "[variables('location')]",
        "sku": {
          "name": "Aligned"
        },
        "properties": {
          "platformFaultDomainCount": 2,
          "platformUpdateDomainCount": 2
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[concat(variables('nicName'),copyIndex(1))]",
        "location": "[variables('location')]",
        "properties": {
          "ipConfigurations": [
            {
              "name": "[concat('ipconfig',copyIndex(1))]",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                  "id": "[variables('subnetRef')]"
                  },
                "loadBalancerBackendAddressPools": [
                  {
                    "id": "[variables('lbPoolID')]"
                  }
                ],
                "loadBalancerInboundNatRules": [
                  {
                    "id": "[concat(variables('loadBalancerInboundNatRules'), copyindex(1))]"
                  }
                ]
              }
            }
          ]
        },
        "copy": {
            "name": "NICCopy",
            "count": "[variables('count')]"
        }
      },
      {
        "apiVersion": "2017-03-30",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[concat(variables('vmName'),copyIndex(1))]",
        "location": "[variables('location')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces/',concat(variables('nicName'),copyIndex(1)))]",
          "[variables('availabilitySetName')]"
        ],
        "properties": {
          "availabilitySet": {
            "id": "[variables('availabilitySetID')]"
          },
          "hardwareProfile": {
            "vmSize": "[variables('vmSize')]"
          },
          "osProfile": {
            "computerName": "[concat(variables('vmName'),copyIndex(1))]",
            "adminUsername": "[variables('adminUsername')]",
            "adminPassword": "[variables('adminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "[variables('windowsOSVersion')]",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage"
            }
            /*"dataDisks": [
              {
                "diskSizeGB": 100,
                "lun": 0,
                "createOption": "Empty"
              }
            ]*/
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[concat(variables('networkInterfacesID'),copyIndex(1))]"
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": true,
              "storageUri": "[concat('http://',variables('storageAccName'),'.blob.core.windows.net')]"
            }
          }
        },
        "copy": {
            "name": "VMCopy",
            "count": "[variables('count')]"
        }
      }
    ]
}