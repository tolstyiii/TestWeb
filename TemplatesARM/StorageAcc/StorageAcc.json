{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageSKU": {
          "type": "string",
          "allowedValues": [
            "Standard_LRS",
            "Standard_ZRS",
            "Standard_GRS",
            "Standard_RAGRS",
            "Premium_LRS"
          ],
          "metadata": {
            "description": "The type of replication to use for the storage account."
          }
        },
        "location": {
            "type": "string",
            "metadata": {
              "description": "Location for all resources."
            }
          },
        "StorageAccName": {
            "type": "string",
            "metadata": {
              "description": "The name for storage account."
            }
          }
      },
    "variables": {
      "location": "[parameters('location')]",
      "StorageAccName": "[concat(resourceGroup().Name,parameters('StorageAccName'))]",
      "storageSKU": "[parameters('storageSKU')]"
    },
    "resources": [
        {
          "type": "Microsoft.Storage/storageAccounts",
          "apiVersion": "2018-02-01",
          "location": "[variables('location')]",
          "kind": "Storage",
          "sku": {
            "name": "[variables('storageSKU')]"
          },
          "name": "[variables('StorageAccName')]"
        }
      ],
      "outputs": {
        "StorageAccName": {
          "type": "object",
          "value": "[reference(resourceid('Microsoft.Storage/storageAccounts',variables('StorageAccName')))]"
        }
      }
}