{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
          },
        "LoadBalancerName": {
            "type": "string",
            "defaultValue": "LB",
            "metadata": {
                "description": "Name of Load Balancer"
            }
        },
        "IPAllocationMethodLB": {
            "type": "string",
        },
        "publicIPAddressName": {
            "type": "string",
            "metadata": {
                "description": "Name of resource Public IP Address"
            }
        },
        "frontendIPConfigurationsName": {
            "type": "string",
            "metadata": {
                "description": "Name of Load Balancer frontend IPConfigurations"
            }
        },
        "backendAddressPoolsName": {
            "type": "string",
            "metadata": {
                "description": "Name of Load Balancer backend AddressPools"
            }
        },
        "probeName": {
            "type": "string",
            "metadata": {
                "description": "Name of Load Balancer probe"
            }
        },
        "loadBalancingRulesName": {
            "type": "string",
            "metadata": {
                "description": "Name of Load Balancing rule"
            }
        },
        "inboundNatRulesName": {
            "type": "string",
            "metadata": {
                "description": "Name of Load Balancer Nat rules (RDP)"
            }
        }
    },
    "variables": {
        "location": "[parameters('location')]",
        "LoadBalancerName": "[concat(resourceGroup().Name,'-', parameters('LoadBalancerName'))]",
        "frontendIPConfigurationsName": "[parameters('frontendIPConfigurationsName')]",
        "frontEndIPConfigID": "[concat(variables('lbID'),'/frontendIPConfigurations/',parameters('frontendIPConfigurationsName'))]",
        "lbID": "[resourceId('Microsoft.Network/loadBalancers',variables('LoadBalancerName'))]",
        "lbProbeID": "[concat(variables('lbID'),'/probes/',variables('probeName'))]",
        "backendAddressPoolsName": "[parameters('backendAddressPoolsName')]",
        "lbPoolID": "[concat(variables('lbID'),'/backendAddressPools/',parameters('backendAddressPoolsName'))]",
        "publicIPAddressID": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]",
        "publicIPAddressName": "[concat(resourceGroup().Name, '-',parameters('publicIPAddressName'))]",
        "IPAllocationMethodLB": "[parameters('IPAllocationMethodLB')]",
        "probeName": "[parameters('probeName')]",
        "loadBalancingRulesName": "[parameters('probeName')]",
        "inboundNatRulesName": "[parameters('inboundNatRulesName')]"
    },
    "resources": [
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('publicIPAddressName')]",
        "location": "[variables('location')]",
        "properties": {
          "publicIPAllocationMethod": "[variables('IPAllocationMethodLB')]"
        }
      },
      {
        "name": "[variables('LoadBalancerName')]",
        "type": "Microsoft.Network/loadBalancers",
        "apiVersion": "2018-08-01",
        "location": "[variables('location')]",
        "dependsOn": [
            "[concat('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName'))]"
        ],
        "properties": {
            "frontendIPConfigurations": [
            {
                "name": "[variables('frontendIPConfigurationsName')]",
                "properties": {
                    "publicIPAddress": {
                        "id": "[variables('publicIPAddressID')]"
                    }
                }
              }
            ],
            "backendAddressPools": [
            {
                "name": "[variables('backendAddressPoolsName')]"
              }
            ],
            "loadBalancingRules": [
            {
                "name": "[variables('loadBalancingRulesName')]",
                "properties": {
                "frontendIPConfiguration": {
                    "id": "[variables('frontEndIPConfigID')]"
                },
                "backendAddressPool": {
                    "id": "[variables('lbPoolID')]"
                },
                "probe": 
                    {
                    "id": "[variables('lbProbeID')]"
                    },
                "protocol": "Tcp",
                "frontendPort": 80,
                "backendPort": 80,
                "idleTimeoutInMinutes": 5,
                "enableFloatingIP": false
                }
              }
            ],
            "probes": [
            {
                "name": "[variables('probeName')]",
                "properties": {
                "protocol": "Tcp",
                "port": 80,
                "intervalInSeconds": 15,
                "numberOfProbes": 2
                }
              }
            ],
            "inboundNatRules": [
            {
                "name": "[concat(variables('inboundNatRulesName'),'1')]",
                "properties": {
                "frontendIPConfiguration": {
                    "id": "[variables('frontEndIPConfigID')]"
                },
                "protocol": "Tcp",
                "frontendPort": 33891,
                "backendPort": 3389,
                "enableFloatingIP": false
                }              
              },
            {
                "name": "[concat(variables('inboundNatRulesName'),'2')]",
                "properties": {
                    "frontendIPConfiguration": {
                        "id": "[variables('frontEndIPConfigID')]"
                    },
                    "protocol": "Tcp",
                    "frontendPort": 33892,
                    "backendPort": 3389,
                    "enableFloatingIP": false
                    }               
                }
            ]
        }
      }
    ]
}