{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageSKU": {
          "type": "string",
          "allowedValues": [
            "Standard_LRS",
            "Standard_ZRS",
            "Standard_GRS",
            "Standard_RAGRS",
            "Premium_LRS"
          ],
          "defaultValue": "Standard_LRS",
          "metadata": {
            "description": "The type of replication to use for the storage account."
          }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
        },
        "StorageAccName": {
            "type": "string",
            "defaultValue": "storageacc",
            "metadata": {
              "description": "The name for storage account."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "VNet",
            "metadata": {
                "description": "Name for new virtual network"
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "192.168.0.0/16",
            "metadata": {
                "description": "Prefix for new virtual network"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "subNet",
            "metadata": {
                "description": "Name for new virtual sunnet"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "192.168.1.0/24",
            "metadata": {
                "description": "Prefix for new virtual subnet"
            }
        },
        "secGroupName": {
            "type": "string",
            "defaultValue": "NSG",
            "metadata": {
                "description": "Name for network security group"
            }
        },
        "secGroupRuleName": {
            "type": "string",
            "defaultValue": "AccessToTestWeb",
            "metadata": {
                "description": "Name of rule for access to network security group"
            }
        },
        "secGroupAddressPrefixIn": {
            "type": "string",
            "defaultValue": "86.57.255.88/29",
            "metadata": {
                "description": "Prefix for network for access to security group"
            }
        },
        "LoadBalancerName": {
            "type": "string",
            "defaultValue": "LB",
            "metadata": {
                "description": "Name of Load Balancer"
            }
        },
        "publicIPAddressName": {
            "type": "string",
            "defaultValue": "PublicIP",
            "metadata": {
                "description": "Name of resource Public IP Address"
            }
        },
        "frontendIPConfigurationsName": {
            "type": "string",
            "defaultValue": "LBFrontEnd",
            "metadata": {
                "description": "Name of Load Balancer frontend IPConfigurations"
            }
        },
        "backendAddressPoolsName": {
            "type": "string",
            "defaultValue": "LBBackEnd",
            "metadata": {
                "description": "Name of Load Balancer backend AddressPools"
            }
        },
        "probeName": {
            "type": "string",
            "defaultValue": "LoadBalancerProbe80",
            "metadata": {
                "description": "Name of Load Balancer probe"
            }
        },
        "loadBalancingRulesName": {
            "type": "string",
            "defaultValue": "LoadBalancingRule80",
            "metadata": {
                "description": "Name of Load Balancing rule"
            }
        },
        "inboundNatRulesName": {
            "type": "string",
            "defaultValue": "RDPVM",
            "metadata": {
                "description": "Name of Load Balancer Nat rules (RDP)"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sa",
            "metadata": {
              "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
          "type": "securestring",
          "metadata": {
            "description": "Password for the Virtual Machine."
          }
        },
        "VMName": {
          "type": "string",
          "defaultValue": "Server",
          "metadata": {
              "description": "Name of VM"
          }
        },
        "windowsOSVersion": {
          "type": "string",
          "defaultValue": "2016-Datacenter",
          "allowedValues": [
            "2008-R2-SP1",
            "2012-Datacenter",
            "2012-R2-Datacenter",
            "2016-Nano-Server",
            "2016-Datacenter-with-Containers",
            "2016-Datacenter"
          ],
          "metadata": {
            "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
          }
        },
        "vmSize": {
          "type": "string",
          "defaultValue": "Standard_A1",
          "metadata": {
            "description": "Sizes of the VM, with count of cores <=2, and RAM between 1792 and 4096 KB"
          }
        },
        "count": {
            "type": "int",
            "defaultValue": 2,
            "minValue": 1,
            "maxValue": 5,
            "metadata": {
                "description": "Count copies of Nics and VMs (every VM had only 1 NIC)"
            }
        },
        "nicName": {
          "type": "string",
          "defaultValue": "NICServer",
          "metadata": {
              "description": "Name of Load Balancer backend AddressPools"
          }
        }
      },
    "variables": {
        "templatesWholePartLink": "https://raw.githubusercontent.com/tolstyiii/TestWeb/master/TemplatesARM/",
        "templateStorageAccLink": "[concat(variables('templatesWholePartLink'),'StorageAcc/StorageAcc.json')]",
        "TemplateNetworks": "[concat(variables('templatesWholePartLink'),'Networks/Network.json')]",
        "TemplateLB": "[concat(variables('templatesWholePartLink'),'LoadBalancer/LB.json')]",
        "templateVM": "[concat(variables('templatesWholePartLink'),'VM/VM.json')]",
        "publicIPAddressName": "[concat(resourceGroup().Name, '-',parameters('publicIPAddressName'))]",
        "virtualNetworkName": "[parameters('virtualNetworkName')]",
        "LoadBalancerName": "[parameters('LoadBalancerName')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "nestedStorageAcc",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateStorageAccLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "StorageAccName": {
                        "value": "[parameters('StorageAccName')]"
                    },
                    "storageSKU": {
                        "value": "[parameters('storageSKU')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "nestedNetworks",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateNetworks')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "addressPrefix": {
                        "value": "[parameters('addressPrefix')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetPrefix": {
                        "value": "[parameters('subnetPrefix')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "secGroupName": {
                        "value": "[parameters('secGroupName')]"
                    },
                    "secGroupRuleName": {
                        "value": "[parameters('secGroupRuleName')]"
                    },
                    "secGroupAddressPrefixIn": {
                        "value": "[parameters('secGroupAddressPrefixIn')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "nestedLoadBalancer",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('TemplateLB')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "LoadBalancerName": {
                        "value": "LoadBalancerName"
                    },
                    "publicIPAddressName": {
                        "value": "publicIPAddressName"
                    },
                    "frontendIPConfigurationsName": {
                        "value": "frontendIPConfigurationsName"
                    },
                    "backendAddressPoolsName": {
                        "value": "backendAddressPoolsName"
                    },
                    "probeName": {
                        "value": "probeName"
                    },
                    "loadBalancingRulesName": {
                        "value": "loadBalancingRulesName"
                    },
                    "inboundNatRulesName": {
                        "value": "inboundNatRulesName"
                    }
                }
            }    
        },
        {
            "apiVersion": "2015-01-01",
            "name": "nestedVM",
            "type": "Microsoft.Resources/deployments",
            /*"dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/',variables('publicIPAddressName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/loadBalancers/', variables('LoadBalancerName'))]"
            ],*/
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateVM')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "VMName": {
                        "value": "[parameters('VMName')]"
                    },
                    "windowsOSVersion": {
                        "value": "[parameters('windowsOSVersion')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "count": {
                        "value": "[parameters('count')]"
                    },
                    "publicIPAddressName": {
                        "value": "[parameters('publicIPAddressName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    },
                    "nicName": {
                        "value": "[parameters('nicName')]"
                    },
                    "LoadBalancerName": {
                        "value": "[parameters('LoadBalancerName')]"
                    },
                    "backendAddressPoolsName": {
                        "value": "[parameters('backendAddressPoolsName')]"
                    },
                    "inboundNatRulesName": {
                        "value": "[parameters('inboundNatRulesName')]"
                    },
                    "StorageAccName": {
                        "value": "[parameters('StorageAccName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    }
                }
            }
        }
    ]
}